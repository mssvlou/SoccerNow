<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="240.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.css.soccernow.controllers.LoginController">

  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Options">
          <items>
            <MenuItem onAction="#back" text="Back" />
            <MenuItem onAction="#quit" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>

    <AnchorPane VBox.vgrow="ALWAYS">
      <children>
        <Label layoutX="178.0" layoutY="14.0" text="Login">
          <font>
            <Font name="System Bold" size="22.0" />
          </font>
        </Label>

        <Label layoutX="14.0" layoutY="57.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="14.0" layoutY="74.0" prefHeight="25.0" prefWidth="384.0" promptText="Introduza o email" />

        <Label layoutX="14.0" layoutY="111.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="14.0" layoutY="128.0" prefHeight="25.0" prefWidth="384.0" promptText="Qualquer password" />

        <Button layoutX="15.0" layoutY="173.0" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="384.0" text="Entrar" />
      </children>
    </AnchorPane>
  </children>
</VBox>
